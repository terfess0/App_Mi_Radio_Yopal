<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiRadioYopal" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#11214E</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="Theme.MiRadioYopal" parent="Base.Theme.MiRadioYopal" >
        <item name="color">@color/color_fondo</item>
        <item name="titleTextColor">@color/titulo_black</item>
    </style>

    <style name="Theme.splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MiRadioYopal</item>
    </style>

    <style name="Theme.BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="elevation">2dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item> <!-- Ajusta segÃºn sea necesario -->
    </style>
</resources>